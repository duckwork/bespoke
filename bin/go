#! /usr/bin/env dash

# WM GO
# let's go!

wew -s | while IFS=: read ev wid; do
  case "$ev" in
    7) # XCB_ENTER_NOTIFY
      wm focus "$wid"
      ;;
    16) # XCB_CREATE_NOTIFY
      continue
      ;;
    17) # XCB_DESTROY_NOTIFY
      continue
      ;;
    18) # XCB_UNMAP_NOTIFY
      continue
      ;;
    19) # XCB_MAP_NOTIFY
      continue
      ;;
  esac
done &
